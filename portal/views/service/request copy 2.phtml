<script>
  document.addEventListener('DOMContentLoaded', function() {

    // Handle the switch for showing/hiding content
    const switchShow = document.querySelectorAll('input.show-content');
    switchShow.forEach(switchGroup => {
      switchGroup.addEventListener('change', function() {
        const contentId = this.getAttribute('data-content-id');
        const content = document.getElementById(contentId);
        if (this.checked) {
          content.style.height = 'auto';
          content.style.display = 'block';
          content.closest('fieldset').style.border = 'var(--border)';
        } else {
          content.style.height = '0';
          content.style.display = 'none';
          content.closest('fieldset').style.border = '1px solid transparent';
        }
      });

      const switchHide = document.querySelectorAll('input.hide-content');
      switchHide.forEach(switchGroup => {
        switchGroup.addEventListener('change', function() {
          const contentId = this.getAttribute('data-content-id');
          const content = document.getElementById(contentId);
          if (this.checked) {
            content.style.height = '0';
            content.style.display = 'none';
            content.closest('fieldset').style.border = '1px solid transparent';
          } else {
            content.style.height = 'auto';
            content.style.display = 'block';
            content.closest('fieldset').style.border = '1px solid silver';
          }
        });
      });

    });


